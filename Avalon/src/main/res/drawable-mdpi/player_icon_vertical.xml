<?xml version="1.0" encoding="utf-8"?>

<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- When selected, use grey -->
    <item android:drawable="@color/button_pressed" android:state_pressed="true" />
    <item android:drawable="@color/button_pressed" android:state_focused="true" />
    <item android:drawable="@color/button_pressed" android:state_selected="true" />
    <!-- When not selected, use transparent-->
    <item android:drawable="@android:color/transparent" />
</selector>